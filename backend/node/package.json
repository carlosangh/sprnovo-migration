{
  "name": "spr-backend-server",
  "version": "1.3.0",
  "description": "SPR Backend Server with Real License System - NO MOCK",
  "main": "backend_server_fixed.js",
  "scripts": {
    "start": "NODE_ENV=production node backend_server_fixed.js",
    "dev": "NODE_ENV=development nodemon backend_server_fixed.js",
    "prod": "NODE_ENV=production LICENSE_MODE=production LICENSE_MOCK=0 NO_MOCK=1 node backend_server_fixed.js",
    "test-license": "node -e \"const { LicenseService } = require('./backend_server_fixed.js'); console.log('Testing license system...');\"",
    "create-license": "node -e \"console.log('Sample license key: SPR-' + Math.random().toString(36).substr(2,4).toUpperCase() + '-' + Math.random().toString(36).substr(2,4).toUpperCase() + '-' + Math.random().toString(36).substr(2,4).toUpperCase() + '-' + Math.random().toString(36).substr(2,4).toUpperCase());\"",
    "smoke-demo": "./demo-smoke-tests.sh",
    "smoke-complete": "./run-smoke-tests-complete.sh",
    "smoke-production": "./run-smoke-tests-complete.sh --production",
    "test-backend": "node tests/smoke-license-comprehensive.js",
    "test-e2e": "node tests/e2e-license-tests.js",
    "test-anti-mock": "node tests/anti-mock-validation.js",
    "test-performance": "node tests/performance-load-tests.js",
    "install-test-deps": "npm install --no-save axios ws playwright && npx playwright install chromium --with-deps"
  },
  "keywords": [
    "spr",
    "whatsapp",
    "api",
    "license",
    "real-license-system",
    "no-mock"
  ],
  "author": "SPR Team",
  "license": "Proprietary",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^6.0.1",
    "express-rate-limit": "^6.7.0",
    "jsonwebtoken": "^9.0.0",
    "bcrypt": "^5.1.0",
    "axios": "^1.3.4",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "sqlite3": "^5.1.6",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.22"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "private"
  },
  "private": true
}